@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-action="Create" class="btn btn-success">Create New Role</a>
</br>
@if(Model.Count()>0)
{
    <div class="mt-2">
        <form class="row offset-2" asp-action="index">
            <div class="col-8">
                <input class="form-control" type="text" name="SearchValue" placeholder="Roles's Names" />
            </div>
            <div class="col-4">
                <input type="submit" class="btn btn-success" value="Search" />
            </div>
        </form>
    </div>
    <table class=" table table-striped table-hover mt-5">
        <thead>
            <tr>

                <td>@Html.DisplayNameFor(R => R.Id)</td>
                <td>@Html.DisplayNameFor(R => R.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.RoleName</td>
                    <partial name="_ButtonsPartialViews" model="@role.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-info">
        <h1>There are No Roles</h1>
    </div>
}



