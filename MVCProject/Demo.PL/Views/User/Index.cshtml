@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

@if (Model.Count() > 0)
{
    <div class="mt-2">
        <form class="row offset-2" asp-action="index">
            <div class="col-8">
                <input class="form-control" type="text" name="SearchValue" placeholder="Users's Names" />
            </div>
            <div class="col-4">
                <input type="submit" class="btn btn-success" value="Search" />
            </div>
        </form>
    </div>
    <table class=" table table-striped table-hover mt-5">
        <thead>
            <tr>

                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.FName)</td>
                <td>@Html.DisplayNameFor(U => U.LName)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U => U.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FName</td>
                    <td>@user.LName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@string.Join(' ', user.Roles)</td>
                    <partial name="_ButtonsPartialViews" model="@user.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h1>TThere are No Users</h1>
    </div>
}

